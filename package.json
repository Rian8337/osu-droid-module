{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "lint": "lerna run lint",
    "format-code": "npx prettier -w --loglevel=silent \"packages/**\"",
    "generate-docs": "cross-env NODE_OPTIONS=--max-old-space-size=4096 typedoc \"packages/*\"",
    "generate-docs-windows": "rmdir docs /s /q & pnpm generate-docs",
    "generate-docs-linux": "rm -rf docs & pnpm generate-docs",
    "postinstall": "lerna run build",
    "publish-release": "lerna publish",
    "publish-prerelease": "lerna publish --dist-tag beta",
    "test": "lerna run test"
  },
  "packageManager": "pnpm@10.28.0",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.4",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "lerna": "^9.0.3",
    "prettier": "^3.8.1",
    "rollup": "^4.57.1",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-node-externals": "^8.1.2",
    "ts-jest": "^29.4.6",
    "typedoc": "^0.28.16",
    "typedoc-plugin-missing-exports": "^4.1.2",
    "typescript": "^5.9.3"
  },
  "eslintConfig": {
    "env": {
      "es2022": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  },
  "prettier": {
    "tabWidth": 4
  },
  "dependencies": {
    "@rollup/plugin-typescript": "^12.3.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0"
  }
}
