{
  "name": "root",
  "private": true,
  "scripts": {
    "format-code": "npx prettier -w --loglevel=silent \"packages/**\"",
    "generate-docs": "cross-env NODE_OPTIONS=--max-old-space-size=4096 typedoc \"packages/*\"",
    "generate-docs-windows": "rmdir docs /s /q & npm run generate-docs",
    "generate-docs-linux": "rm -rf docs & npm run generate-docs",
    "publish-release": "lerna publish",
    "publish-prerelease": "lerna publish --dist-tag beta",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.1",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "jest": "^29.4.3",
    "lerna": "^6.5.1",
    "prettier": "^2.5.1",
    "rollup": "^3.17.2",
    "rollup-plugin-dts": "^5.2.0",
    "rollup-plugin-node-externals": "^5.1.2",
    "ts-jest": "^29.0.5",
    "typedoc": "^0.23.25",
    "typedoc-plugin-missing-exports": "^1.0.0",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  },
  "prettier": {
    "tabWidth": 4
  }
}
