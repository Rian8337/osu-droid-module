{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/osu-base",
    "packages/osu-difficulty-calculator",
    "packages/osu-rebalance-difficulty-calculator",
    "packages/osu-droid-replay-analyzer",
    "packages/osu-droid-utilities",
    "packages/osu-strain-graph-generator"
  ],
  "scripts": {
    "format-code": "npx prettier -w --loglevel=silent \"packages/**\"",
    "generate-docs": "cross-env NODE_OPTIONS=--max-old-space-size=4096 typedoc \"packages/*\"",
    "generate-docs-windows": "rmdir docs /s /q & npm run generate-docs",
    "generate-docs-linux": "rm -rf docs & npm run generate-docs",
    "publish-release": "lerna publish",
    "publish-prerelease": "lerna publish --dist-tag beta",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.4",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "jest": "^29.4.3",
    "lerna": "^7.0.2",
    "prettier": "^2.5.1",
    "rollup": "^3.17.2",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-node-externals": "^6.0.1",
    "ts-jest": "^29.0.5",
    "typedoc": "^0.24.8",
    "typedoc-plugin-missing-exports": "^2.0.0",
    "typescript": "^5.1.3"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  },
  "prettier": {
    "tabWidth": 4
  }
}
