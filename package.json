{
  "name": "root",
  "private": true,
  "scripts": {
    "format-code": "npx prettier -w --loglevel=silent \"packages/**\"",
    "generate-docs": "cross-env NODE_OPTIONS=--max-old-space-size=4096 typedoc \"packages/*\"",
    "generate-docs-windows": "rmdir docs /s /q & npm run generate-docs",
    "generate-docs-linux": "rm -rf docs & npm run generate-docs",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "rollup": "^2.73.0",
    "rollup-plugin-dts": "^4.2.1",
    "rollup-plugin-node-externals": "^4.0.0",
    "ts-jest": "^27.1.3",
    "typedoc": "^0.22.11",
    "typedoc-plugin-missing-exports": "^0.22.6",
    "typescript": "^4.6.4"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  },
  "prettier": {
    "tabWidth": 4
  }
}
